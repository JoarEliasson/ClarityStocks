    <BorderPane fx:id="layout">
      <top>
        <HBox alignment="CENTER" minWidth="1150.0" prefHeight="247.0" prefWidth="1200.0" style="-fx-padding: 10;">
          <fx:include source="TopListsView.fxml" />
        </HBox>
      </top>
      <bottom>
         <HBox alignment="CENTER" minHeight="0.0" minWidth="1100.0" prefHeight="50.0" prefWidth="1100.0" spacing="50" style="-fx-padding: 20;">
               <children>
               <Button alignment="CENTER" onAction="#handleUserInfo" text="Change name">
                     <HBox.margin>
                        <Insets bottom="25.0" left="1075.0" />
                     </HBox.margin>
                  </Button>
               </children>
            </HBox>
      </bottom>
         <center>
       <fx:include fx:id="favoriteList" source="FavoriteListView.fxml" BorderPane.alignment="CENTER" />
