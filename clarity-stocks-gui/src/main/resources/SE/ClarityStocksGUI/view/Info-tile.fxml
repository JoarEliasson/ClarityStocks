<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.scene.image.ImageView?>
<?import javafx.geometry.Insets?>
<VBox xmlns="http://javafx.com/javafx"
  xmlns:fx="http://javafx.com/fxml"
  fx:controller="SE.ClarityStocksGUI.controller.tiles.InfoTile"
  maxWidth="1050">
    <HBox alignment="CENTER_LEFT">
        <VBox alignment="CENTER" styleClass="favoriteButton" onMouseClicked="#favoritePressed">
            <padding>
                <Insets top="5" right="10"/>
            </padding>
            <ImageView fx:id="favoriteIcon"/>
        </VBox>
        <Label fx:id="nameLabel" styleClass="stockName" wrapText="true"/>
    </HBox>
    <Label fx:id="sectorLabel" styleClass="sectorLabel" wrapText="true"/>
    <Label fx:id="descriptionLabel" styleClass="descriptionLabel" wrapText="true"/>

</VBox>