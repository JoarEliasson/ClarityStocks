<?xml version="1.0" encoding="UTF-8"?>

<?import io.github.palexdev.materialfx.controls.MFXButton?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.shape.Rectangle?>
<?import javafx.scene.text.Font?>
<?import org.controlsfx.control.SearchableComboBox?>
<VBox xmlns:fx="http://javafx.com/fxml/1" alignment="CENTER" prefHeight="400.0"
  prefWidth="600.0"
  xmlns="http://javafx.com/fxml/21"
  fx:controller="SE.ClarityStocksGUI.controller.GUIStockViewController" fx:id="mainVBox">

  <BorderPane fx:id="layout">
    <center>

      <HBox alignment="CENTER" spacing="50">
        <StackPane>
          <VBox alignment="CENTER">
            <Rectangle fill="#d9d9d9" height="400" styleClass="backgroundPanelStockView" width="650"
              fx:id="graphBackground"/>
          </VBox>
          <VBox alignment="CENTER">
            <Label styleClass="stockName" fx:id="nameLabel"/>
            <fx:include source="Stock-linegraph.fxml"/>
          </VBox>
        </StackPane>
        <StackPane>
          <VBox alignment="CENTER">
            <StackPane>
              <Rectangle fill="#d9d9d9" height="400" styleClass="backgroundPanelStockView" width="300"
                fx:id="statBackground"/>

            </StackPane>
          </VBox>
          <VBox alignment="CENTER" maxHeight="350" maxWidth="250" fx:id="stockStatsBox">
            <Label wrapText="true" fx:id="peEvaluationText"/>
          </VBox>
        </StackPane>

      </HBox>
    </center>

    <top>
      <StackPane>
        <HBox>

          <!--Home button Home button Home button Home button Home button Home button -->
          <MFXButton onAction="#goToHomeView" styleClass="menuButton" textAlignment="CENTER"
            fx:id="homeButton">
            <VBox.margin>
              <Insets/>
            </VBox.margin>
            <font>
              <Font size="14.0"/>
            </font>
            <opaqueInsets>
              <Insets right="20.0"/>
            </opaqueInsets>
          </MFXButton>

          <!-- Stock button Stock button Stock button Stock button Stock button Stock button -->
          <MFXButton styleClass="menuButton" textAlignment="CENTER" fx:id="stockButton">
            <VBox.margin>
              <Insets/>
            </VBox.margin>
            <font>
              <Font size="14.0"/>
            </font>
            <opaqueInsets>
              <Insets right="20.0"/>
            </opaqueInsets>
          </MFXButton>
          <Pane HBox.hgrow="ALWAYS"/>
          <SearchableComboBox onAction="#loadStock" prefWidth="200" promptText="Search..."
            styleClass="searchField" fx:id="searchField">
            <HBox.margin>
              <Insets bottom="3.0" right="5" top="3.0"/>
            </HBox.margin>
            <opaqueInsets>
              <Insets/>
            </opaqueInsets>
          </SearchableComboBox>

        </HBox>
        <VBox>
          <Rectangle fill="#d9d9d9" height="30.0" width="6.0" fx:id="menuBar"/>
          <Rectangle fill="#929292" height="0.5" width="6.0" fx:id="menuBarLine"/>
        </VBox>
      </StackPane>

    </top>
  </BorderPane>

</VBox>
