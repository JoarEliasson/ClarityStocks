<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.scene.shape.Rectangle?>
<?import javafx.geometry.Insets?>
<?import io.github.palexdev.materialfx.controls.MFXButton?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.shape.Rectangle?>
<?import javafx.scene.text.Font?>
<?import org.controlsfx.control.SearchableComboBox?>
<?import javafx.scene.text.Text?>
<VBox fx:id="mainVBox" alignment="CENTER" xmlns="http://javafx.com/fxml/21"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="SE.ClarityStocksGUI.controller.GUIStockViewController"
      prefHeight="400.0" prefWidth="600.0">

    <BorderPane fx:id="layout">
        <top>
            <StackPane>
                <VBox>
                    <Rectangle fx:id="menuBar" fill="#d9d9d9" height="30.0" width="6.0" />
                    <Rectangle fx:id="menuBarLine" fill="#929292" height="0.5" width="6.0" />
                </VBox>
                <HBox>

                    <!--Home button Home button Home button Home button Home button Home button -->
                    <MFXButton fx:id="homeButton" styleClass="menuButton" textAlignment="CENTER" onAction="#goToHomeView">
                        <font>
                            <Font size="14.0" />
                        </font>
                        <VBox.margin>
                            <Insets />
                        </VBox.margin>
                        <opaqueInsets>
                            <Insets right="20.0"/>
                        </opaqueInsets></MFXButton>

                    <!-- Stock button Stock button Stock button Stock button Stock button Stock button -->
                    <MFXButton fx:id="stockButton" styleClass="menuButton" textAlignment="CENTER">
                        <font>
                            <Font size="14.0" />
                        </font>
                        <VBox.margin>
                            <Insets />
                        </VBox.margin>
                        <opaqueInsets>
                            <Insets right="20.0"/>
                        </opaqueInsets></MFXButton>

                </HBox>
            </StackPane>

        </top>

        <center>

            <HBox alignment="CENTER" spacing="50">
                <StackPane>
                    <VBox alignment="CENTER">
                        <Rectangle fill="#d9d9d9" height="400" width="650" fx:id="graphBackground" styleClass="backgroundPanelStockView"/>
                    </VBox>
                    <VBox alignment="CENTER">
                        <Label fx:id="nameLabel" styleClass="stockName"/>
                        <fx:include source="Stock-linegraph.fxml"/>
                    </VBox>
                </StackPane>
                <StackPane>
                    <VBox alignment="CENTER">
                        <StackPane>
                        <Rectangle fill="#d9d9d9" height="400" width="300" fx:id="statBackground" styleClass="backgroundPanelStockView"/>

                        </StackPane>
                    </VBox>
                    <VBox alignment="CENTER"  fx:id="stockStatsBox" maxHeight="350" maxWidth="250">
                        <Label fx:id="peEvaluationText" wrapText="true"/>
                    </VBox>
                </StackPane>

      </HBox>
    </center>

    <top>
      <StackPane>
        <HBox>

          <!--Home button Home button Home button Home button Home button Home button -->
          <MFXButton onAction="#goToHomeView" styleClass="menuButton" textAlignment="CENTER"
            fx:id="homeButton">
            <VBox.margin>
              <Insets/>
            </VBox.margin>
            <font>
              <Font size="14.0"/>
            </font>
            <opaqueInsets>
              <Insets right="20.0"/>
            </opaqueInsets>
          </MFXButton>

          <!-- Stock button Stock button Stock button Stock button Stock button Stock button -->
          <MFXButton styleClass="menuButton" textAlignment="CENTER" fx:id="stockButton">
            <VBox.margin>
              <Insets/>
            </VBox.margin>
            <font>
              <Font size="14.0"/>
            </font>
            <opaqueInsets>
              <Insets right="20.0"/>
            </opaqueInsets>
          </MFXButton>

        </HBox>
        <VBox>
          <Rectangle fill="#d9d9d9" height="30.0" width="6.0" fx:id="menuBar"/>
          <Rectangle fill="#929292" height="0.5" width="6.0" fx:id="menuBarLine"/>
        </VBox>
      </StackPane>

    </top>
  </BorderPane>

</VBox>
