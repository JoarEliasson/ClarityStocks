<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.scene.shape.Rectangle?>
<?import javafx.geometry.Insets?>
<?import io.github.palexdev.materialfx.controls.MFXButton?>
<?import javafx.scene.text.Font?>
<?import org.controlsfx.control.SearchableComboBox?>
<VBox fx:id="mainVBox" alignment="CENTER" xmlns="http://javafx.com/fxml/21"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="SE.ClarityStocksGUI.controller.GUIStockViewController"
      prefHeight="400.0" prefWidth="600.0">

    <BorderPane fx:id="layout">
        <top>
            <StackPane>
                <VBox>
                    <Rectangle fx:id="menuBar" fill="#d9d9d9" height="30.0" width="6.0" />
                    <Rectangle fx:id="menuBarLine" fill="#929292" height="0.5" width="6.0" />
                </VBox>
                <HBox>

                    <!--Home button Home button Home button Home button Home button Home button -->
                    <MFXButton fx:id="homeButton" styleClass="menuButton" textAlignment="CENTER" onAction="#goToHomeView">
                        <font>
                            <Font size="14.0" />
                        </font>
                        <VBox.margin>
                            <Insets />
                        </VBox.margin>
                        <opaqueInsets>
                            <Insets right="20.0"/>
                        </opaqueInsets></MFXButton>

                    <!-- Stock button Stock button Stock button Stock button Stock button Stock button -->
                    <MFXButton fx:id="stockButton" styleClass="menuButton" textAlignment="CENTER">
                        <font>
                            <Font size="14.0" />
                        </font>
                        <VBox.margin>
                            <Insets />
                        </VBox.margin>
                        <opaqueInsets>
                            <Insets right="20.0"/>
                        </opaqueInsets></MFXButton>
                    <Pane HBox.hgrow="ALWAYS"/>
                    <SearchableComboBox fx:id="searchField" promptText="Search..." prefWidth="200" styleClass="searchField" onAction="#loadStock">
                        <opaqueInsets>
                            <Insets />
                        </opaqueInsets>
                        <HBox.margin>
                            <Insets bottom="3.0" top="3.0"  right="5"/>
                        </HBox.margin>
                    </SearchableComboBox>

                </HBox>
            </StackPane>

        </top>

        <center>

            <HBox alignment="CENTER" spacing="50">
                <StackPane>
                    <VBox alignment="CENTER">
                        <Rectangle fill="#d9d9d9" height="400" width="650" fx:id="graphBackground" styleClass="backgroundPanelStockView"/>
                    </VBox>
                    <VBox alignment="CENTER">
                        <Label fx:id="nameLabel" styleClass="stockName"/>
                        <fx:include source="Stock-linegraph.fxml"/>
                    </VBox>
                </StackPane>
                <StackPane>
                    <VBox alignment="CENTER">
                        <StackPane>
                        <Rectangle fill="#d9d9d9" height="400" width="200" fx:id="statBackground" styleClass="backgroundPanelStockView"/>

                        </StackPane>
                    </VBox>
                    <VBox alignment="CENTER"  >
                        <Label fx:id="peEvaluationText" maxHeight="350" maxWidth="150"/>
                    </VBox>
                </StackPane>

            </HBox>
        </center>
    </BorderPane>

</VBox>
