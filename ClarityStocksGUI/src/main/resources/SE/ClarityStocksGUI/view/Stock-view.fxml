<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.scene.shape.Rectangle?>
<?import javafx.geometry.Insets?>
<?import io.github.palexdev.materialfx.controls.MFXButton?>
<?import javafx.scene.text.Font?>
<?import org.controlsfx.control.SearchableComboBox?>
<?import javafx.scene.text.Text?>
<VBox fx:id="mainVBox" alignment="CENTER" xmlns="http://javafx.com/fxml/21"
  xmlns:fx="http://javafx.com/fxml/1"
  fx:controller="SE.ClarityStocksGUI.controller.GUIStockViewController"
  prefHeight="400.0" prefWidth="600.0">

<ScrollPane fx:id="scrollPane">
  <BorderPane fx:id="layout">
    <center>
      <VBox alignment="CENTER" spacing="20">
        <HBox alignment="CENTER" spacing="50">
          <VBox.margin>
            <Insets top="75" />
          </VBox.margin>
          <StackPane>
            <VBox alignment="CENTER">
              <Rectangle fill="#d9d9d9" height="400" width="650" fx:id="graphBackground"
                styleClass="backgroundPanelStockView"/>
            </VBox>
            <VBox alignment="CENTER">
              <StackPane>
                <fx:include source="Stock-linegraph.fxml" fx:id="graph"/>
                <ProgressBar fx:id="progress" styleClass="progress-bar-primary"/>
              </StackPane>
            </VBox>
          </StackPane>
          <VBox alignment="CENTER" spacing="15">
            <StackPane>
              <Rectangle fill="#d9d9d9" height="150" width="300" fx:id="descBackground"
                styleClass="backgroundPanelStockView"/>
              <VBox>
                <Label fx:id="nameLabel" styleClass="stockName" text="test"/>

              </VBox>
            </StackPane>

            <StackPane>

              <Rectangle fill="#d9d9d9" height="235" width="300" fx:id="statBackground"
                styleClass="backgroundPanelStockView"/>
                <fx:include source="ratings-tile.fxml" fx:id="ratingsTile"/>
            </StackPane>

          </VBox>
        </HBox>
        <Rectangle fill="#d9d9d9" height="1000" width="500"/>
      </VBox>

    </center>
  </BorderPane>
</ScrollPane>
</VBox>
