<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.shape.Rectangle?>
<?import io.github.palexdev.materialfx.controls.MFXButton?>
<?import javafx.scene.text.Font?>
<?import javafx.geometry.Insets?>
<?import org.controlsfx.control.SearchableComboBox?>
<StackPane xmlns="http://javafx.com/javafx"
           xmlns:fx="http://javafx.com/fxml"
           fx:controller="SE.ClarityStocksGUI.controller.MenuBarController"
           fx:id="mainStackPane">
    <VBox>
        <Rectangle fx:id="menuBar" fill="#d9d9d9" height="30.0" width="6.0" />
        <Rectangle fx:id="menuBarLine" fill="#929292" height="0.5" width="6.0" />
    </VBox>
    <HBox>
        <!--Home button Home button Home button Home button Home button Home button -->
        <MFXButton fx:id="homeButton" styleClass="menuButton" textAlignment="CENTER">
            <font>
                <Font size="14.0" />
            </font>
            <VBox.margin>
                <Insets />
            </VBox.margin>
            <opaqueInsets>
                <Insets right="20.0" />
            </opaqueInsets></MFXButton>

        <!-- Stock button Stock button Stock button Stock button Stock button Stock button -->
        <MFXButton fx:id="stockButton" onAction="#goToStockView" styleClass="menuButton" textAlignment="CENTER">
            <font>
                <Font size="14.0" />
            </font>
            <VBox.margin>
                <Insets />
            </VBox.margin>
            <opaqueInsets>
                <Insets  />
            </opaqueInsets>
        </MFXButton>
        <Pane HBox.hgrow="ALWAYS"/>
        <SearchableComboBox fx:id="searchField" prefWidth="200" styleClass="searchField" onAction="#loadStock">
            <opaqueInsets>
                <Insets />
            </opaqueInsets>
            <HBox.margin>
                <Insets bottom="3.0" top="3.0"  right="5"/>
            </HBox.margin>
        </SearchableComboBox>
    </HBox>

</StackPane>
